# Trading Bot Environment Configuration Template
# Copy this file to .env and configure with your actual values

# ================================
# REQUIRED: OpenAI API Configuration
# ================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4.1-mini

# ================================
# Trading Bot Mode
# ================================
# Set to 1 for test mode (synthetic data, no API calls)
# Set to 0 for production mode (real data, LLM enabled)
TBOT_TEST_MODE=1

# ================================
# Logging Configuration
# ================================
TBOT_LOG_LEVEL=INFO
TBOT_LOG_FILE=logs/trading_bot.log

# Detailed Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_TO_CONSOLE=true
LOG_TO_FILE=true
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_BACKUP_COUNT=5

# Module-specific Log Levels (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL_BACKTESTING=INFO
LOG_LEVEL_AGENTS=INFO
LOG_LEVEL_DATA=WARNING
LOG_LEVEL_VISUALIZATION=WARNING
LOG_LEVEL_CLI=INFO
TBOT_LOG_FILE=logs/trading_bot.log

# ================================
# Data Provider Settings
# ================================
DATA_SOURCE=yahoo
DEFAULT_INTERVAL=1d
DATA_CACHE_ENABLED=true
DATA_CACHE_DIR=cache/

# ================================
# Default Backtesting Parameters
# ================================
DEFAULT_INITIAL_CAPITAL=10000.0
DEFAULT_BACKTEST_DAYS=60
DEFAULT_SYMBOL=AAPL

# ================================
# Agent Configuration
# ================================
SIGNAL_CONFIDENCE_THRESHOLD=0.6
DECISION_CONFIDENCE_THRESHOLD=0.7
USE_LLM_CONFIRMATION=true

# ================================
# Visualization Settings
# ================================
DEFAULT_CHART_THEME=professional
DEFAULT_CHART_WIDTH=16
DEFAULT_CHART_HEIGHT=12
CHART_OUTPUT_DIR=outputs/charts/

# ================================
# Performance Settings
# ================================
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30
MAX_RETRIES=3

# ================================
# Development Options
# ================================
DEBUG_MODE=false
ENABLE_PROFILING=false
SAVE_DEBUG_DATA=false

# ================================
# Directory Paths
# ================================
LOGS_DIR=logs/
OUTPUTS_DIR=outputs/
CACHE_DIR=cache/

# ================================
# Optional: Advanced LLM Parameters
# ================================
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=500
OPENAI_TOP_P=1.0

# ================================
# Backtesting Scenarios
# ================================

# Bull Market Scenario
BULL_MARKET_START=2020-03-01
BULL_MARKET_END=2021-12-31
BULL_MARKET_CAPITAL=10000.0
BULL_MARKET_DESCRIPTION=Bull market recovery period

# Bear Market Scenario  
BEAR_MARKET_START=2022-01-01
BEAR_MARKET_END=2022-12-31
BEAR_MARKET_CAPITAL=10000.0
BEAR_MARKET_DESCRIPTION=Bear market correction period

# Sideways Market Scenario
SIDEWAYS_MARKET_START=2019-01-01
SIDEWAYS_MARKET_END=2019-12-31
SIDEWAYS_MARKET_CAPITAL=10000.0
SIDEWAYS_MARKET_DESCRIPTION=Sideways/consolidation period

# ================================
# Environment Configurations
# ================================

# Current Environment (development/staging/production)
ENVIRONMENT=development

# Development Environment Settings
DEV_DATA_SOURCE=yahoo
DEV_CACHE_ENABLED=true
DEV_DEBUG_MODE=true

# Staging Environment Settings
STAGING_DATA_SOURCE=yahoo
STAGING_CACHE_ENABLED=true
STAGING_DEBUG_MODE=false

# Production Environment Settings
PROD_DATA_SOURCE=premium_api
PROD_CACHE_ENABLED=false
PROD_DEBUG_MODE=false

# ================================
# Agent Workflow Configurations
# ================================

# Conservative Strategy
CONSERVATIVE_SIGNAL_CONFIRMATION_STEPS=3
CONSERVATIVE_RISK_MANAGEMENT=strict
CONSERVATIVE_POSITION_SIZING=kelly_criterion

# Aggressive Strategy
AGGRESSIVE_SIGNAL_CONFIRMATION_STEPS=1
AGGRESSIVE_RISK_MANAGEMENT=moderate
AGGRESSIVE_POSITION_SIZING=fixed_percentage

# Active Strategy (default: conservative or aggressive)
ACTIVE_STRATEGY=conservative
